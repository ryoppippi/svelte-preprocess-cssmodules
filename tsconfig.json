{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"types": [
			"vitest/globals",
			"vitest/importMeta"
		],
		"strict": true,
		"declaration": true,
		"inlineSourceMap": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"tests",
		"vite.config.ts",
		"eslint.config.js",
		"tsup.config.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
