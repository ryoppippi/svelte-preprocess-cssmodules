{
	"compilerOptions": {
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": ".",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"typeRoots": [
			"./src/types",
			"./node_modules/@types",
			"vitest/importMeta"
		],
		"types": [
			"node"
		],
		"allowJs": true,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"sourceMap": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tasks"
	]
}
